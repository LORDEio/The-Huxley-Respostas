#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    double n1, n1f, n2, n2f, n3, n3f, media;
    
    scanf("%lf\n", &n1);
    scanf("%lf\n", &n2);
    scanf("%lf", &n3);
         
         n1f = n1 * 2;
         n2f = n2 * 3;
         n3f = n3 * 5; 
         media = (n1f + n2f + n3f)/10;
               
               printf("MEDIA = %.1lf", media);
           
	return 0;
}
