#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

        int hora, min;

            scanf("%d %d", &hora, &min);


                if(hora>12)
                {
                    printf("%02d\n", hora-12);
                    printf("%02d\n", min);
                    printf("pm");

                }else
                if(hora==0)
                {
                    printf("12\n");
                    printf("%02d\n", min);
                    printf("am");
                }else
                if(hora==12)
                {
                    printf("12\n");
                    printf("%02d\n", min);
                    printf("pm");
                }else

                {
                    printf("%02d\n", hora);
                    printf("%02d\n", min);
                    printf("am");
                }
	return 0;
}
